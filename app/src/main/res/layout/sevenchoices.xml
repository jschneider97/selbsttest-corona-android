<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewSeven"
        android:layout_width="350dp"
        android:layout_height="87dp"
        android:text="tv7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <RadioGroup
        android:id="@+id/radioGroupSeven"
        android:layout_width="329dp"
        android:layout_height="421dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSeven"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/radioButtonseven1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioButtonseven2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioButtonseven3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioButtonseven4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioButtonseven5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioButtonseven6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioButtonseven7"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:checked="true"
            android:text="RadioButton" />
    </RadioGroup>

    <Button
        android:id="@+id/submitbuttonseven"
        android:layout_width="173dp"
        android:layout_height="49dp"
        android:text="Weiter"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupSeven"
        app:layout_constraintVertical_bias="0.13" />
</androidx.constraintlayout.widget.ConstraintLayout>